    "@bitpay-labs/bitcore-lib-ltc": "^11.6.0",
    "@solana-program/compute-budget": "0.7.0",
    "@solana-program/memo": "0.7.0",
    "@solana-program/system": "0.7.0",
    "@solana-program/token": "0.5.1",
    "@solana/kit": "2.1.0",
    "ed25519-hd-key": "^1.3.0",
    "ethers": "6.13.5",
    "info": "0.0.6-beta.0",
    "ripple-binary-codec": "^1.10.0",
    "web3": "4.16.0",
    "xrpl": "2.13.0"
  },
  "devDependencies": {
    "@types/chai": "5.0.1",
    "@types/mocha": "10.0.10",
    "@types/node": "22.13.1",
    "chai": "5.1.2",
    "mocha": "11.1.0",
    "tsx": "^4.21.0",
    "typescript": "5.7.3"
  },
