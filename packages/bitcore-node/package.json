{
  "name": "bitcore-node",
  "description": "A blockchain indexing node with extended capabilities using bitcore",
  "engines": {
    "node": ">=8.0.0"
  },
  "version": "8.0.1",
  "author": "Justin Langston <nitsujlangston@gmail.com>",
  "contributors": [
    "Justin Langston <nitsujlangston@gmail.com>",
    "Micah Riggan <micahriggan@gmail.com>"
  ],
  "main": "build/server.js",
  "bin": "bin/start",
  "prettier": {
    "singleQuote": true
  },
  "scripts": {
    "start": "npm run tsc && node build/server.js",
    "debug": "npm run tsc && node --inspect build/server.js --DEBUG true",
    "tsc": "$(npm bin)/tsc",
    "doc": "$(npm bin)/typedoc --out docs",
    "doc:open": "open docs/index.html || xdg-open docs/index.html",
    "tsc:test": "./node_modules/.bin/tsc -p ./tsconfig.test.json",
    "test": "npm run tsc:test && node ./build-test/test/runners/unit.js && node ./build-test/test/runners/integration.js",
    "test:unit": "npm run tsc:test && node ./build-test/test/runners/unit.js",
    "test:integration": "npm run tsc:test && node ./build-test/test/runners/integration.js"
  },
  "keywords": [
    "bitcore-node",
    "typescript",
    "bitcoin",
    "bitcoin-cash",
    "ethereum",
    "node"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/express": "^4.11.1",
    "@types/mocha": "^5.2.0",
    "@types/mongodb": "^3.0.18",
    "@types/mongoose": "^5.0.11",
    "@types/node": "^10.0.3",
    "@types/request": "^2.47.0",
    "@types/sinon": "^4.3.3",
    "@types/winston": "^2.3.9",
    "chai": "^4.1.2",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "glob": "^7.1.2",
    "mocha": "^5.0.5",
    "sinon": "^4.4.8",
    "supertest": "^3.0.0",
    "typedoc": "^0.11.1",
    "typescript": "^2.8.3"
  },
  "dependencies": {
    "JSONStream": "~1.3.1",
    "async": "^2.5.0",
    "bitcore-lib": "^8.0.0",
    "bitcore-lib-cash": "^8.0.0",
    "bitcore-p2p": "^8.0.0",
    "bitcore-p2p-cash": "^8.0.0",
    "body-parser": "^1.18.3",
    "express": "^4.16.3",
    "mkdirp": "^0.5.1",
    "mongoose": "^5.0.11",
    "progress": "^2.0.0",
    "request": "^2.86.0",
    "secp256k1": "^3.5.0",
    "snappy": "^6.0.1",
    "underscore": "^1.8.3",
    "web3": "^1.0.0-beta.34",
    "web3-eth": "^1.0.0-beta.34",
    "winston": "^2.3.9"
  }
}
