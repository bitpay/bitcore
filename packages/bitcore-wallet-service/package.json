{
  "name": "bitcore-wallet-service",
  "description": "A service for Mutisig HD Bitcoin Wallets",
  "author": "BitPay Inc",
  "version": "11.5.2",
  "license": "MIT",
  "main": "ts_build/src/index.js",
  "types": "./ts_build/src/index.d.ts",
  "keywords": [
    "bitcoin",
    "copay",
    "multisig",
    "wallet",
    "bitcore",
    "BWS"
  ],
  "repository": {
    "url": "git@github.com:bitpay/bitcore-wallet-service.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/bitpay/bitcore-wallet-service/issues"
  },
  "scripts": {
    "start": "npm run clean && npm run build && ./start.sh",
    "stop": "./stop.sh",
    "coverage": "npm run compile && ./node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha -- --reporter spec test",
    "test": "npm run compile && mocha --exit -r tsx 'test/**/*.test.ts'",
    "test:ci": "BWS_LOG_LEVEL=none npm run test",
    "coveralls": "./node_modules/.bin/istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- -R spec && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "build": "tsc && npm run cp:templates",
    "build:prod": "tsc -p tsconfig.prod.json && npm run cp:templates",
    "build:docker": "docker build -t bitpay/bitcore-wallet-service:latest -f ./Dockerfile ../..",
    "clean": "rm -rf ./ts_build",
    "compile": "npm run clean && npm run build",
    "pub": "npm run build && npm publish",
    "precommit": "npm run lint",
    "lint": "eslint .",
    "fix:errors": "eslint --fix --quiet .",
    "fix:all": "eslint --fix .",
    "fix": "npm run fix:errors",
    "update:stats": "npm run clean && npm run build && chmod +x ./ts_build/updatestats/updatestats.js && ./ts_build/updatestats/updatestats.js",
    "clean:fiatrates": "npm run clean && npm run build && chmod +x ./ts_build/cleanfiatrates/cleanfiatrates.js && ./ts_build/cleanfiatrates/cleanfiatrates.js",
    "cp:templates": "cp -r ./templates ./ts_build/templates"
  },
  "dependencies": {
    "@sendgrid/mail": "6.5.4",
    "abi-decoder": "2.4.0",
    "async": "0.9.2",
    "bitcore-tss": "^11.5.1",
    "compression": "1.7.4",
    "cors": "2.8.5",
    "crypto-wallet-core": "^11.5.1",
    "email-validator": "1.2.3",
    "express": "4.19.2",
    "express-rate-limit": "2.14.2",
    "inherits": "2.0.4",
    "istanbul": "0.4.5",
    "json-stable-stringify": "1.0.1",
    "juice": "^11.0.1",
    "lodash": "4.17.19",
    "moment": "2.30.1",
    "mongodb": "3.5.9",
    "moralis": "2.25.1",
    "mustache": "2.3.2",
    "nodemailer": "5.1.1",
    "preconditions": "2.2.3",
    "read": "1.0.7",
    "request": "2.88.2",
    "request-promise-native": "1.0.8",
    "secp256k1": "4.0.3",
    "sjcl": "1.0.8",
    "socket.io": "4.8.1",
    "socket.io-client": "4.8.1",
    "source-map-support": "0.5.16",
    "sticky-session": "0.1.0",
    "uuid": "3.4.0",
    "winston": "3.3.3"
  },
  "devDependencies": {
    "@types/async": "^2.4.1",
    "@types/chai": "^5.2.2",
    "@types/lodash": "^4.14.123",
    "@types/mocha": "^5.2.0",
    "@types/mongodb": "^3.5.25",
    "@types/node": "^22.10.10",
    "@types/nodemailer": "^4.6.6",
    "@types/request": "^2.48.1",
    "chai": "^5.2.0",
    "coveralls": "^3.0.2",
    "memdown": "^1.0.0",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "sinon": "^7.1.1",
    "supertest": "*",
    "tsx": "^4.21.0",
    "typescript": "^5.7.3"
  },
  "bitcoreNode": "./bitcorenode",
