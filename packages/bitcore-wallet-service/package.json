    "bitcore-lib-doge": "^10.0.0",
    "bitcore-lib-ltc": "^10.0.0",
    "body-parser": "1.19.0",
    "compression": "1.7.4",
    "crypto-wallet-core": "^10.0.0",
    "email-validator": "1.2.3",
    "ethers": "4.0.0-beta.3",
    "express": "4.17.1",
    "express-rate-limit": "2.14.2",
    "inherits": "2.0.4",
    "istanbul": "0.4.5",
    "json-stable-stringify": "1.0.1",
    "lodash": "4.17.19",
    "moment": "2.29.4",
    "mongodb": "3.5.9",
