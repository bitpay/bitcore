{
  "compilerOptions": {
    "lib": [
      "ES2020",
      "ES2022",
      "DOM"
    ],
    "noImplicitAny": false,
    "skipLibCheck": true,
    "removeComments": true,
    "declaration": true,
    "declarationMap": true,
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "ES2020",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "*": [
        "*",
        "./src/*",
        "./test/*"
      ]
    },
    "outDir": "build",
    "sourceMap": true
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}