{
  "name": "bitcore-vault",
  "version": "0.1.0",
  "description": "Wrapper for secure-heap forked process utilizing secure heap for protection of serializable credentials",
  "main": "./ts_build/src/index.js",
  "types": "./ts_build/src/index.d.ts",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "npm run compile",
    "clean": "rm -rf ./ts_build",
    "pub": "npm run compile && npm publish",
    "watch": "tsc --watch",
    "compile": "npm run clean && tsc",
    "test": "mocha -r tsx test/**/*.test.ts",
    "precommit": "echo 'TODO: npm run fix && npm run lint'",
    "lint": "eslint .",
    "fix": "eslint --fix --quiet .",
    "run:example": "npm run compile && node ts_build/bitcore-vault/src/examples/run.js"
  },
  "dependencies": {
    "child_process": "^1.0.2",
    "bitcore-client": "^11.3.2"
  },
  "devDependencies": {
    "@types/chai": "5.0.1",
    "@types/mocha": "10.0.10",
    "@types/node": "22.13.1",
    "chai": "5.1.2",
    "mocha": "11.1.0",
    "tsx": "4.19.2",
    "typescript": "5.7.3"
  },
  "author": "Michael Jay <mjay@bitpay.com>",
  "license": "ISC"
}
