{
  "name": "bitcore-vault",
  "version": "0.1.0",
  "description": "Wrapper for secure-heap forked process utilizing secure heap for protection of serializable credentials",
  "author": "BitPay, Inc",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "npm run compile",
    "clean": "rm -rf ./build",
    "pub": "npm run compile && npm publish",
    "watch": "tsc --watch",
    "compile": "npm run clean && tsc",
    "test": "mocha -r tsx test/**/*.test.ts",
    "precommit": "npm run lint; npm run fix:errors",
    "lint": "eslint .",
    "fix:errors": "eslint --fix --quiet .",
    "fix:all": "eslint --fix .",
    "run:example": "npm run compile && node build/bitcore-vault/src/examples/run.js"
  },
  "dependencies": {
    "child_process": "^1.0.2",
    "bitcore-client": "^11.3.2"
  },
  "devDependencies": {
    "@types/chai": "5.0.1",
    "@types/mocha": "10.0.10",
    "@types/node": "22.13.1",
    "chai": "5.1.2",
    "mocha": "11.1.0",
    "tsx": "4.19.2",
    "typescript": "5.7.3"
  },
  
  "license": "ISC"
}
