<% if (post.link){ %>
  <h1 itemprop="name">
    <a class="post-title" href="<%- url_for(post.link) %>" target="_blank" itemprop="url"><%= post.title %></a>
  </h1>
<% } else if (post.title){ %>
  <% if (index){ %>
    <h1 itemprop="name">
      <a class="post-title" href="<%- url_for(post.path) %>"><%= post.title %></a>
    </h1>
  <% } else { %>
    <h1 class="post-title" itemprop="name">
      <%= post.title %>
    </h1>
  <% } %>
<% } %>